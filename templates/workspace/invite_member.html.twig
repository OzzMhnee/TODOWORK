{% extends 'base.html.twig' %}

{% block body %}
<div class="max-w-md mx-auto mt-10 bg-white p-8 rounded shadow">
    <h1 class="text-xl font-bold mb-4">Inviter un membre sur l'espace de travail "{{ workspace.name }}"</h1>
    {{ form_start(form) }}
        <div class="mb-4">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'w-full px-3 py-2 border rounded'}}) }}
            {{ form_errors(form.email) }}
        </div>
        <div class="mb-4">
            {{ form_label(form.role) }}
            {{ form_widget(form.role, {'attr': {'class': 'w-full px-3 py-2 border rounded'}}) }}
            {{ form_errors(form.role) }}
        </div>
        <button class="bg-blue-600 text-white font-bold py-2 px-4 rounded hover:bg-blue-700" type="submit">Ajouter</button>
    {{ form_end(form) }}
    <a href="{{ path('app_workspace_show', {'id': workspace.id}) }}" class="text-blue-600 hover:underline block mt-4">Retour Ã  l'espace de travail</a>
</div>
{% endblock %}
