{% extends 'base.html.twig' %}

{% block body %}
<div class="max-w-lg mx-auto mt-10 bg-white p-8 rounded shadow">
    <h1 class="text-2xl font-bold mb-6 text-yellow-600">Modifier Label</h1>
    {{ form_start(form) }}
        <div class="mb-4">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'w-full px-3 py-2 border rounded'}}) }}
            {{ form_errors(form.name) }}
        </div>
        <div class="mb-4">
            {{ form_label(form.color) }}
            {{ form_widget(form.color, {'attr': {'class': 'w-full px-3 py-2 border rounded', 'type': 'color'}}) }}
            {{ form_errors(form.color) }}
        </div>
        <button class="bg-yellow-600 text-white font-bold py-2 px-4 rounded hover:bg-yellow-700" type="submit">Enregistrer</button>
        {{ form_rest(form) }}
    {{ form_end(form) }}
    <a href="{{ path('app_label') }}" class="text-yellow-600 hover:underline block mt-4">Retour Ã  la liste</a>
</div>
{% endblock %}
