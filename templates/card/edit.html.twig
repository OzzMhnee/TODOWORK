{% extends 'base.html.twig' %}

{% block body %}
<div class="max-w-lg mx-auto mt-10 bg-white p-8 rounded shadow">
    <h1 class="text-2xl font-bold mb-6 text-purple-600">Modifier Carte</h1>
    {{ form_start(form) }}
        <div class="mb-4">
            {{ form_label(form.title) }}
            {{ form_widget(form.title, {'attr': {'class': 'w-full px-3 py-2 border rounded'}}) }}
            {{ form_errors(form.title) }}
        </div>
        <div class="mb-4">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'w-full px-3 py-2 border rounded'}}) }}
            {{ form_errors(form.description) }}
        </div>
        <div class="mb-4">
            {{ form_label(form.position) }}
            {{ form_widget(form.position, {'attr': {'class': 'w-full px-3 py-2 border rounded'}}) }}
            {{ form_errors(form.position) }}
        </div>
        <div class="mb-4">
            {{ form_label(form.due_at) }}
            {{ form_widget(form.due_at, {'attr': {'class': 'w-full px-3 py-2 border rounded'}}) }}
            {{ form_errors(form.due_at) }}
        </div>
        <div class="mb-4">
            {{ form_label(form.liste) }}
            {{ form_widget(form.liste, {'attr': {'class': 'w-full px-3 py-2 border rounded'}}) }}
            {{ form_errors(form.liste) }}
        </div>
        <button class="bg-purple-600 text-white font-bold py-2 px-4 rounded hover:bg-purple-700" type="submit">Enregistrer</button>
        {{ form_rest(form) }}
    {{ form_end(form) }}
    <a href="{{ path('app_card') }}" class="text-purple-600 hover:underline block mt-4">Retour Ã  la liste</a>
</div>
{% endblock %}
