<div id="flash-messages"
    data-controller="flash-messages"
    class="fixed bottom-4 right-4 z-50 max-w-xs w-full sm:w-96 flex flex-col items-end pointer-events-none">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="mb-2 px-4 py-3 rounded shadow text-white pointer-events-auto
                {% if label == 'success' %}bg-green-600{% elseif label == 'error' or label == 'danger' %}bg-red-600{% else %}bg-blue-600{% endif %} flash-message">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
</div>
