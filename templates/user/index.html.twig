{% extends 'base.html.twig' %}

{% block body %}
<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="w-full max-w-md bg-white rounded-lg shadow-lg p-8">
        <h1 class="text-2xl font-bold text-center text-blue-600 mb-6">Mon profil</h1>
        {% for message in app.flashes('success') %}
            <div class="mb-4 text-green-600 text-center font-semibold">
                {{ message }}
            </div>
        {% endfor %}
        {{ form_start(registrationForm) }}
            <div class="mb-4">
                {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>
            <div class="mb-4">
                {{ form_label(registrationForm.firstName, null, {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
                {{ form_widget(registrationForm.firstName, {'attr': {'class': 'w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(registrationForm.firstName) }}
            </div>
            <div class="mb-4">
                {{ form_label(registrationForm.lastName, null, {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
                {{ form_widget(registrationForm.lastName, {'attr': {'class': 'w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(registrationForm.lastName) }}
            </div>
            <div class="mb-4" data-controller="password-strength">
                {{ form_label(registrationForm.plainPassword.first, null, {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
                {{ form_widget(registrationForm.plainPassword.first, {
                    'attr': {
                        'class': 'w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500',
                        'id': 'plainPassword',
                        'data-password-strength-target': 'password'
                    }
                }) }}
                {{ form_errors(registrationForm.plainPassword.first) }}
                <div class="mt-2 space-y-1 text-sm">
                    <div>
                        <input type="checkbox" id="pw-length" disabled class="mr-1 align-middle"> <label for="pw-length" class="align-middle">Au moins 8 caractères</label>
                    </div>
                    <div>
                        <input type="checkbox" id="pw-upper" disabled class="mr-1 align-middle"> <label for="pw-upper" class="align-middle">Une majuscule</label>
                    </div>
                    <div>
                        <input type="checkbox" id="pw-lower" disabled class="mr-1 align-middle"> <label for="pw-lower" class="align-middle">Une minuscule</label>
                    </div>
                    <div>
                        <input type="checkbox" id="pw-digit" disabled class="mr-1 align-middle"> <label for="pw-digit" class="align-middle">Un chiffre</label>
                    </div>
                    <div>
                        <input type="checkbox" id="pw-special" disabled class="mr-1 align-middle"> <label for="pw-special" class="align-middle">Un caractère spécial</label>
                    </div>
                </div>
                <p class="text-xs text-gray-400 mt-1">Laissez vide pour ne pas changer le mot de passe.</p>
            </div>
            <div class="mb-4">
                {{ form_label(registrationForm.plainPassword.second, null, {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
                {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500', 'id': 'repeatPassword'}}) }}
                {{ form_errors(registrationForm.plainPassword.second) }}
            </div>
            <button type="submit" class="w-full bg-blue-600 text-white font-bold py-2 px-4 rounded hover:bg-blue-700 transition">Mettre à jour</button>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
