{% extends 'base.html.twig' %}

{% block body %}
<div class="max-w-lg mx-auto mt-10 bg-white p-8 rounded shadow">
    <h1 class="text-2xl font-bold mb-6 text-blue-400">Modifier Liste</h1>
    {{ form_start(form) }}
        <div class="mb-4">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'w-full px-3 py-2 border rounded'}}) }}
            {{ form_errors(form.name) }}
        </div>
        <div class="mb-4">
            {{ form_label(form.position) }}
            {{ form_widget(form.position, {'attr': {'class': 'w-full px-3 py-2 border rounded'}}) }}
            {{ form_errors(form.position) }}
        </div>
        <div class="mb-4">
            {{ form_label(form.board) }}
            {{ form_widget(form.board, {'attr': {'class': 'w-full px-3 py-2 border rounded'}}) }}
            {{ form_errors(form.board) }}
        </div>
        <button class="bg-blue-400 text-white font-bold py-2 px-4 rounded hover:bg-blue-500" type="submit">Enregistrer</button>
        {{ form_rest(form) }}
    {{ form_end(form) }}
    <a href="{{ path('app_liste') }}" class="text-blue-400 hover:underline block mt-4">Retour Ã  la liste</a>
</div>
{% endblock %}
