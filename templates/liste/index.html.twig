{% extends 'base.html.twig' %}

{% block body %}
<div class="max-w-3xl mx-auto mt-10 bg-white p-8 rounded shadow">
    <h1 class="text-2xl font-bold mb-6 text-blue-400">Listes</h1>
    <a href="{{ path('app_liste_new') }}" class="mb-4 inline-block bg-blue-400 text-white px-4 py-2 rounded hover:bg-blue-500">Nouvelle liste</a>
    <ul>
        {% for liste in listes %}
            <li class="mb-2 p-4 border rounded flex justify-between items-center">
                <span>
                    <strong>{{ liste.name }}</strong>
                    <span class="text-gray-500 text-sm ml-2">Board : {{ liste.board ? liste.board.name : 'Aucun' }}</span>
                </span>
                <span>
                    <a href="{{ path('app_liste_show', {'id': liste.id}) }}" class="text-blue-600 hover:underline mr-2">Voir</a>
                    <a href="{{ path('app_liste_edit', {'id': liste.id}) }}" class="text-green-600 hover:underline mr-2">Modifier</a>
                    <form method="post" action="{{ path('app_liste_delete', {'id': liste.id}) }}" style="display:inline;" onsubmit="return confirm('Supprimer cette liste ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ liste.id) }}">
                        <button class="text-red-600 hover:underline bg-transparent border-0 p-0" type="submit">Supprimer</button>
                    </form>
                </span>
            </li>
        {% else %}
            <li>Aucune liste pour le moment.</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
