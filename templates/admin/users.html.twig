{% extends 'base.html.twig' %}

{% block body %}
<div class="max-w-2xl mx-auto mt-10 bg-white p-8 rounded shadow">
    <h1 class="text-2xl font-bold mb-6 text-yellow-700">Gestion des utilisateurs</h1>
    {% set page = app.request.query.get('admin_page', 1) %}
    {% set perPage = 5 %}
    {% set total = users|length %}
    {% set pages = (total / perPage)|round(0, 'ceil') %}
    {% set start = (page-1) * perPage %}
    {% set usersPage = users|slice(start, perPage) %}

    <div>
        {% for user in usersPage %}
            <div x-data="{ open: false }" class="mb-2 border rounded">
                <button @click="open = !open" class="w-full text-left px-3 py-2 bg-gray-100 hover:bg-gray-200 flex justify-between items-center">
                    <span>{{ user.firstName }} {{ user.lastName }} ({{ user.email }})</span>
                    <svg :class="{'rotate-180': open}" class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                    </svg>
                </button>
                <div x-show="open" class="px-3 py-2 text-sm text-gray-700 bg-white">
                    <div><strong>Rôles :</strong> {{ user.roles|join(', ') }}</div>
                    <div><strong>ID :</strong> {{ user.id }}</div>
                    {% if user.workspaces|length %}
                        <div><strong>Espaces de travail accessibles :</strong> {{ user.workspaces|length }}</div>
                        {% for workspace in user.workspaces %}
                            <div class="ml-4">{{ workspace.name }}</div>
                            {% if workspace.projects|length %}
                                <div class="ml-4"><strong>Projets accessibles :</strong> {{ workspace.projects|length }}</div>
                                {% for project in workspace.projects %}
                                    <div class="ml-8">{{ project.name }}</div>
                                    {% if project.boards|length %}
                                        <div class="ml-8"><strong>Etapes accessibles :</strong> {{ project.boards|length }}</div>
                                        {% for board in project.boards %}
                                            <div class="ml-12">{{ board.name }}</div>
                                            {% if board.cards|length %}
                                                <div class="ml-12"><strong>Tâches accessibles :</strong> {{ board.cards|length }}</div>
                                                {% for card in board.cards %}
                                                    <div class="ml-16">{{ card.title }}</div>
                                                {% endfor %}
                                            {% else %}
                                                <div class="ml-16 texta-gray-500 italic">Aucune tâche accessible</div>
                                            {% endif %}
                                        {% endfor %}
                                    {% else %}
                                        <div class="ml-12 texta-gray-500 italic">Aucune étape accessible</div>
                                    {% endif %}
                                {% endfor %}
                            {% else %}
                                <div class="ml-4 texta-gray-500 italic">Aucun projet accessible</div>
                            {% endif %}
                        {% endfor %}
                    {% else %}
                        <div><strong>Espaces de travail accessibles :</strong> 0</div>
                    {% endif %}
                </div>
            </div>
        {% else %}
            <div class="text-gray-500 text-center">Aucun utilisateur.</div>
        {% endfor %}
        <div class="flex justify-center mt-2 gap-1">
            {% for i in 1..pages %}
                {% if i == page %}
                    <span class="px-2 py-1 bg-yellow-600 text-white rounded">{{ i }}</span>
                {% else %}
                    <a href="?admin_page={{ i }}" class="px-2 py-1 bg-gray-200 text-gray-700 rounded hover:bg-yellow-100">{{ i }}</a>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
