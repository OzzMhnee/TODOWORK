{% extends 'base.html.twig' %}

{% block body %}
<div class="max-w-3xl mx-auto mt-10 bg-white p-8 rounded shadow">
    <h1 class="text-2xl font-bold mb-6 text-blue-500">Etapes</h1>
    <a href="{{ path('app_board_new') }}" class="mb-4 inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Nouvelle étape</a>
    <ul>
        {% for board in boards %}
            <li class="mb-2 p-4 border rounded">
                <div class="flex justify-between items-center">
                    <span>
                        <strong class="text-blue-700">{{ board.name }}</strong>
                        <span class="text-gray-500 text-sm ml-2">Projet : {{ board.project.name }}</span>
                    </span>
                    <span>
                        <a href="{{ path('app_board_show', {'id': board.id}) }}" class="text-blue-600 hover:underline mr-2">Fiche</a>
                        <a href="{{ path('app_board_edit', {'id': board.id}) }}" class="text-green-600 hover:underline mr-2">Modifier</a>
                        <form method="post" action="{{ path('app_board_delete', {'id': board.id}) }}" style="display:inline;" onsubmit="return confirm('Supprimer cette étape ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ board.id) }}">
                            <button class="text-red-600 hover:underline bg-transparent border-0 p-0" type="submit">Supprimer</button>
                        </form>
                    </span>
                </div>
                <ul class="ml-4 mt-2">
                    {% for card in board.cards %}
                        <li>
                            <span class="font-semibold text-gray-700">Tâche :</span> {{ card.title }}
                        </li>
                    {% else %}
                        <li class="text-gray-400">Aucune tâche disponible</li>
                    {% endfor %}
                </ul>
            </li>
        {% else %}
            <li>Aucune étape pour le moment.</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
