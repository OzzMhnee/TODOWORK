{% extends 'base.html.twig' %}

{% block body %}
<div class="max-w-lg mx-auto mt-10 bg-white p-8 rounded shadow">
    <h1 class="text-2xl font-bold mb-6 text-green-600">Nouveau Projet</h1>
    {{ form_start(form) }}
        <div class="mb-4">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'w-full px-3 py-2 border rounded'}}) }}
            {{ form_errors(form.name) }}
        </div>
        <div class="mb-4">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'w-full px-3 py-2 border rounded'}}) }}
            {{ form_errors(form.description) }}
        </div>
        <div class="mb-4">
            {{ form_label(form.workspace) }}
            {{ form_widget(form.workspace, {'attr': {'class': 'w-full px-3 py-2 border rounded'}}) }}
            {{ form_errors(form.workspace) }}
        </div>

        <button class="bg-green-600 text-white font-bold py-2 px-4 rounded hover:bg-green-700" type="submit">Créer</button>
    {{ form_end(form) }}
    <a href="{{ path('app_project') }}" class="text-green-600 hover:underline block mt-4">Retour à la liste</a>
</div>
{% endblock %}
