{% extends 'base.html.twig' %}

{% block body %}
<div class="max-w-3xl mx-auto mt-10 bg-white p-8 rounded shadow">
    <h1 class="text-2xl font-bold mb-6 text-green-600">Mes Projets</h1>
    <a href="{{ path('app_project_new') }}" class="mb-4 inline-block bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">Nouveau projet</a>
    <ul>
        {% for project in projects %}
            <li class="mb-2 p-4 border rounded">
                <div class="flex justify-between items-center">
                    <span class="flex items-center">
                        <strong class="text-green-700">{{ project.name }}</strong>
                        <span class="text-gray-500 text-sm ml-2">({{ project.workspace.name }})</span>
                    </span>
                    <span>
                        <a href="{{ path('app_project_show', {'id': project.id}) }}" class="text-blue-600 hover:underline mr-2">Fiche</a>
                        <a href="{{ path('app_project_edit', {'id': project.id}) }}" class="text-green-600 hover:underline mr-2">Modifier</a>
                        <form method="post" action="{{ path('app_project_delete', {'id': project.id}) }}" style="display:inline;" onsubmit="return confirm('Supprimer ce projet ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
                            <button class="text-red-600 hover:underline bg-transparent border-0 p-0" type="submit">Supprimer</button>
                        </form>
                    </span>
                </div>
                <ul class="ml-4 mt-2">
                    {% for board in project.boards %}
                        <li>
                            <span class="font-semibold text-blue-500">Etape :</span> {{ board.name }}
                            <ul class="ml-4">
                                {% for card in board.cards %}
                                    <li>
                                        <span class="font-semibold text-gray-700">Tâche :</span> {{ card.title }}
                                    </li>
                                {% else %}
                                    <li class="text-gray-400">Aucune tâche disponible</li>
                                {% endfor %}
                            </ul>
                        </li>
                    {% else %}
                        <li class="text-gray-400">Aucune étape disponible</li>
                    {% endfor %}
                </ul>
            </li>
        {% else %}
            <li>Aucun projet disponible pour le moment.</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
